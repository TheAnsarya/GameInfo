<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:vm="using:GameInfoTools.Core.Project.ViewModels"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="600"
			 x:Class="GameInfoTools.UI.Views.ProjectExplorerView"
			 x:DataType="vm:ProjectExplorerViewModel">

	<Design.DataContext>
		<vm:ProjectExplorerViewModel/>
	</Design.DataContext>

	<Grid RowDefinitions="Auto,Auto,*">
		<!-- Header -->
		<Border Grid.Row="0" Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" Padding="8">
			<StackPanel Spacing="4">
				<TextBlock Text="Project Explorer" FontWeight="SemiBold"/>
				<TextBlock Text="{Binding ProjectName}" FontSize="11" Opacity="0.7"
						   IsVisible="{Binding HasProject}"/>
			</StackPanel>
		</Border>

		<!-- Toolbar -->
		<Border Grid.Row="1" Padding="4" Background="{DynamicResource SystemControlBackgroundChromeLowBrush}">
			<StackPanel Orientation="Horizontal" Spacing="4">
				<Button Content="ðŸ“" ToolTip.Tip="Open Project" Command="{Binding OpenProjectCommand}"
						Padding="6,4" FontSize="12"/>
				<Button Content="ðŸ”„" ToolTip.Tip="Refresh" Command="{Binding RefreshCommand}"
						Padding="6,4" FontSize="12" IsEnabled="{Binding HasProject}"/>
				<Button Content="âž•" ToolTip.Tip="Add Asset" Command="{Binding AddAssetCommand}"
						Padding="6,4" FontSize="12" IsEnabled="{Binding HasProject}"/>
				<Separator Width="1" Background="{DynamicResource SystemControlBackgroundBaseMediumBrush}" Margin="4,2"/>
				<TextBox Text="{Binding SearchFilter}" Watermark="Search..." Width="100"
						 Padding="4,2" FontSize="11"/>
			</StackPanel>
		</Border>

		<!-- Tree View -->
		<Border Grid.Row="2" Padding="4" IsVisible="{Binding HasProject}">
			<TreeView ItemsSource="{Binding RootNodes}"
					  SelectedItem="{Binding SelectedNode}">
				<TreeView.ItemTemplate>
					<TreeDataTemplate ItemsSource="{Binding Children}">
						<StackPanel Orientation="Horizontal" Spacing="6">
							<TextBlock Text="{Binding Icon}" FontSize="14"/>
							<TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
							<TextBlock Text="{Binding Count, StringFormat='({0})'}" Opacity="0.5"
									   FontSize="11" VerticalAlignment="Center"
									   IsVisible="{Binding HasChildren}"/>
						</StackPanel>
					</TreeDataTemplate>
				</TreeView.ItemTemplate>
			</TreeView>
		</Border>

		<!-- No Project Placeholder -->
		<Border Grid.Row="2" Padding="16" IsVisible="{Binding !HasProject}">
			<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="12">
				<TextBlock Text="ðŸ“‚" FontSize="48" HorizontalAlignment="Center" Opacity="0.3"/>
				<TextBlock Text="No Project Open" FontWeight="SemiBold" HorizontalAlignment="Center"/>
				<TextBlock Text="Open an existing project or create a new one."
						   Opacity="0.7" TextWrapping="Wrap" TextAlignment="Center"/>
				<StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
					<Button Content="Open Project" Command="{Binding OpenProjectCommand}"/>
					<Button Content="New Project" Command="{Binding NewProjectCommand}"/>
				</StackPanel>
			</StackPanel>
		</Border>
	</Grid>
</UserControl>
