@*
	StatusBadge Component
	Shows status indicators with semantic colors.
	Useful for showing completion states, availability, etc.
*@
<span class="status-badge status-@GetStatusClass()"
	  role="status"
	  aria-label="@GetAriaLabel()">
	@if (ShowIcon)
	{
		<span class="status-icon" aria-hidden="true">@GetIcon()</span>
	}
	@if (ShowLabel)
	{
		<span class="status-label">@GetLabel()</span>
	}
</span>

@code {
	/// <summary>
	/// Status type to display.
	/// </summary>
	[Parameter]
	public StatusType Status { get; set; } = StatusType.Unknown;

	/// <summary>
	/// Custom label to override default.
	/// </summary>
	[Parameter]
	public string? Label { get; set; }

	/// <summary>
	/// Whether to show the status icon.
	/// </summary>
	[Parameter]
	public bool ShowIcon { get; set; } = true;

	/// <summary>
	/// Whether to show the status label.
	/// </summary>
	[Parameter]
	public bool ShowLabel { get; set; } = true;

	private string GetStatusClass() => Status switch
	{
		StatusType.Complete => "complete",
		StatusType.InProgress => "in-progress",
		StatusType.Planned => "planned",
		StatusType.Available => "available",
		StatusType.Unavailable => "unavailable",
		StatusType.Success => "success",
		StatusType.Warning => "warning",
		StatusType.Error => "error",
		StatusType.Info => "info",
		_ => "unknown"
	};

	private string GetIcon() => Status switch
	{
		StatusType.Complete => "✓",
		StatusType.InProgress => "⏳",
		StatusType.Planned => "○",
		StatusType.Available => "✓",
		StatusType.Unavailable => "✗",
		StatusType.Success => "✓",
		StatusType.Warning => "⚠",
		StatusType.Error => "✗",
		StatusType.Info => "ℹ",
		_ => "?"
	};

	private string GetLabel() => Label ?? Status switch
	{
		StatusType.Complete => "Complete",
		StatusType.InProgress => "In Progress",
		StatusType.Planned => "Planned",
		StatusType.Available => "Available",
		StatusType.Unavailable => "Unavailable",
		StatusType.Success => "Success",
		StatusType.Warning => "Warning",
		StatusType.Error => "Error",
		StatusType.Info => "Info",
		_ => "Unknown"
	};

	private string GetAriaLabel() => $"Status: {GetLabel()}";

	/// <summary>
	/// Status type enumeration.
	/// </summary>
	public enum StatusType
	{
		Unknown,
		Complete,
		InProgress,
		Planned,
		Available,
		Unavailable,
		Success,
		Warning,
		Error,
		Info
	}
}
