<div class="download-card card">
	<div class="download-card-header">
		<span class="download-card-icon">@Icon</span>
		<div class="download-card-info">
			<h3 class="download-card-title">@Title</h3>
			<p class="download-card-description text-secondary text-sm">@Description</p>
		</div>
	</div>
	<div class="download-card-meta">
		@if (!string.IsNullOrEmpty(Version))
		{
			<span class="download-meta-item">
				<span class="meta-label">Version:</span>
				<span class="meta-value">@Version</span>
			</span>
		}
		@if (!string.IsNullOrEmpty(Platform))
		{
			<span class="download-meta-item">
				<span class="meta-label">Platform:</span>
				<span class="meta-value">@Platform</span>
			</span>
		}
		@if (!string.IsNullOrEmpty(Size))
		{
			<span class="download-meta-item">
				<span class="meta-label">Size:</span>
				<span class="meta-value">@Size</span>
			</span>
		}
	</div>
	<div class="download-card-actions">
		<a href="@Url" target="_blank" rel="noopener" class="btn btn-primary btn-sm">
			Download
		</a>
	</div>
</div>

@code {
	[Parameter]
	public required string Title { get; set; }

	[Parameter]
	public string? Description { get; set; }

	[Parameter]
	public string? Version { get; set; }

	[Parameter]
	public string? Platform { get; set; }

	[Parameter]
	public string? Size { get; set; }

	[Parameter]
	public required string Url { get; set; }

	[Parameter]
	public string Icon { get; set; } = "ðŸ“¦";
}
