@namespace DarkRepos.Web.Components.Shared
@inherits ProgressCircleBase

<div class="progress-circle @SizeClass @CssClass"
	role="progressbar"
	aria-valuenow="@Value"
	aria-valuemin="0"
	aria-valuemax="100"
	title="@TooltipText">
	<svg viewBox="0 0 36 36" class="circular-chart">
		<path class="circle-bg"
			d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831" />
		<path class="circle @ColorClass"
			stroke-dasharray="@StrokeDasharray"
			d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831" />
	</svg>
	@if (ShowLabel)
	{
		<span class="percentage">@FormattedLabel</span>
	}
</div>
