@using System.Timers
@implements IDisposable

@if (_isVisible) {
	<div class="toast @_typeClass @(_isExiting ? "toast-exit" : "")" role="alert" aria-live="polite">
		<div class="toast-icon">
			@switch (Type) {
				case ToastType.Success:
					<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
						<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" />
					</svg>
					break;
				case ToastType.Error:
					<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
						<path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-8-5a.75.75 0 01.75.75v4.5a.75.75 0 01-1.5 0v-4.5A.75.75 0 0110 5zm0 10a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
					</svg>
					break;
				case ToastType.Warning:
					<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
						<path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
					</svg>
					break;
				case ToastType.Info:
				default:
					<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
						<path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a.75.75 0 000 1.5h.253a.25.25 0 01.244.304l-.459 2.066A1.75 1.75 0 0010.747 15H11a.75.75 0 000-1.5h-.253a.25.25 0 01-.244-.304l.459-2.066A1.75 1.75 0 009.253 9H9z" clip-rule="evenodd" />
					</svg>
					break;
			}
		</div>
		<div class="toast-content">
			@if (!string.IsNullOrEmpty(Title)) {
				<div class="toast-title">@Title</div>
			}
			<div class="toast-message">@Message</div>
		</div>
		@if (Dismissible) {
			<button class="toast-close" @onclick="Dismiss" aria-label="Close notification">
				<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
					<path d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72 3.72a.75.75 0 101.06-1.06L11.06 10l3.72-3.72a.75.75 0 00-1.06-1.06L10 8.94 6.28 5.22z" />
				</svg>
			</button>
		}
	</div>
}

@code {
	[Parameter]
	public string Message { get; set; } = string.Empty;

	[Parameter]
	public string? Title { get; set; }

	[Parameter]
	public ToastType Type { get; set; } = ToastType.Info;

	[Parameter]
	public bool Dismissible { get; set; } = true;

	[Parameter]
	public int Duration { get; set; } = 5000;

	[Parameter]
	public bool AutoClose { get; set; } = true;

	[Parameter]
	public EventCallback OnClose { get; set; }

	private bool _isVisible = true;
	private bool _isExiting = false;
	private Timer? _timer;
	private string _typeClass => Type switch {
		ToastType.Success => "toast-success",
		ToastType.Error => "toast-error",
		ToastType.Warning => "toast-warning",
		ToastType.Info => "toast-info",
		_ => "toast-info"
	};

	protected override void OnInitialized() {
		if (AutoClose && Duration > 0) {
			_timer = new Timer(Duration);
			_timer.Elapsed += async (_, _) => await InvokeAsync(Dismiss);
			_timer.AutoReset = false;
			_timer.Start();
		}
	}

	private async Task Dismiss() {
		_timer?.Stop();
		_isExiting = true;
		StateHasChanged();
		await Task.Delay(300);
		_isVisible = false;
		await OnClose.InvokeAsync();
		StateHasChanged();
	}

	public void Dispose() {
		_timer?.Stop();
		_timer?.Dispose();
	}

	public enum ToastType {
		Info,
		Success,
		Warning,
		Error
	}
}
