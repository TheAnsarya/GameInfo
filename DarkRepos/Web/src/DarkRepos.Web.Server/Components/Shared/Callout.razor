@namespace DarkRepos.Web.Components.Shared
@inherits CalloutBase

<div class="callout @TypeClass @CssClass" role="@AriaRole">
	@if (ShowIcon)
	{
		<span class="callout-icon" aria-hidden="true">@IconText</span>
	}
	<div class="callout-content">
		@if (!string.IsNullOrEmpty(Title))
		{
			<strong class="callout-title">@Title</strong>
		}
		<div class="callout-body">
			@if (ChildContent is not null)
			{
				@ChildContent
			}
			else if (!string.IsNullOrEmpty(Message))
			{
				@Message
			}
		</div>
	</div>
	@if (Dismissible)
	{
		<button type="button"
			class="callout-dismiss"
			@onclick="HandleDismiss"
			aria-label="Dismiss"
			title="Dismiss">
			Ã—
		</button>
	}
</div>
