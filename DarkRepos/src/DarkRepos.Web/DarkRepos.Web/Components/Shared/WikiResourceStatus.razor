@using DarkRepos.Core.Models

<div class="wiki-resources @(Compact ? "compact" : "full")">
	<span class="wiki-resource @(Wiki.HasRomMap ? "available" : "unavailable")" title="ROM Map">
		@if (!Compact)
		{
			<span class="indicator">@(Wiki.HasRomMap ? "✓" : "○")</span>
		}
		@if (ShowLabels)
		{
			<span class="label">ROM Map</span>
		}
		@if (Compact)
		{
			<span class="indicator">@(Wiki.HasRomMap ? "✓" : "○")</span>
		}
	</span>
	<span class="wiki-resource @(Wiki.HasRamMap ? "available" : "unavailable")" title="RAM Map">
		@if (!Compact)
		{
			<span class="indicator">@(Wiki.HasRamMap ? "✓" : "○")</span>
		}
		@if (ShowLabels)
		{
			<span class="label">RAM Map</span>
		}
		@if (Compact)
		{
			<span class="indicator">@(Wiki.HasRamMap ? "✓" : "○")</span>
		}
	</span>
	<span class="wiki-resource @(Wiki.HasDataStructures ? "available" : "unavailable")" title="Data Structures">
		@if (!Compact)
		{
			<span class="indicator">@(Wiki.HasDataStructures ? "✓" : "○")</span>
		}
		@if (ShowLabels)
		{
			<span class="label">Data</span>
		}
		@if (Compact)
		{
			<span class="indicator">@(Wiki.HasDataStructures ? "✓" : "○")</span>
		}
	</span>
	<span class="wiki-resource @(Wiki.HasSystems ? "available" : "unavailable")" title="Systems">
		@if (!Compact)
		{
			<span class="indicator">@(Wiki.HasSystems ? "✓" : "○")</span>
		}
		@if (ShowLabels)
		{
			<span class="label">Systems</span>
		}
		@if (Compact)
		{
			<span class="indicator">@(Wiki.HasSystems ? "✓" : "○")</span>
		}
	</span>
	@if (Wiki.HasNotes)
	{
		<span class="wiki-resource available" title="Notes">
			@if (!Compact)
			{
				<span class="indicator">✓</span>
			}
			@if (ShowLabels)
			{
				<span class="label">Notes</span>
			}
			@if (Compact)
			{
				<span class="indicator">✓</span>
			}
		</span>
	}
</div>

@code {
	[Parameter, EditorRequired]
	public WikiResources Wiki { get; set; } = default!;

	[Parameter]
	public bool Compact { get; set; } = false;

	[Parameter]
	public bool ShowLabels { get; set; } = true;
}
