@using static Skeleton
@*
	SkeletonCard Component
	Pre-built skeleton layout matching GameCard component.
	Use when loading game/tool lists.
*@
<div class="skeleton-card-container">
	<div class="skeleton-card-image">
		<Skeleton Variant="SkeletonVariant.Rectangle" Height="120px" />
	</div>
	<div class="skeleton-card-content">
		<div class="skeleton-card-badges">
			<Skeleton Variant="SkeletonVariant.Button" Width="60px" Height="1.5rem" />
			@if (ShowSecondBadge)
			{
				<Skeleton Variant="SkeletonVariant.Button" Width="50px" Height="1.5rem" />
			}
		</div>
		<Skeleton Variant="SkeletonVariant.Text" Width="80%" Height="1.25rem" />
		<div class="skeleton-card-description">
			<Skeleton Variant="SkeletonVariant.Text" Width="100%" />
			<Skeleton Variant="SkeletonVariant.Text" Width="90%" />
			@if (ShowThirdLine)
			{
				<Skeleton Variant="SkeletonVariant.Text" Width="60%" />
			}
		</div>
	</div>
</div>

@code {
	/// <summary>
	/// Whether to show a second badge placeholder.
	/// </summary>
	[Parameter]
	public bool ShowSecondBadge { get; set; } = true;

	/// <summary>
	/// Whether to show a third description line.
	/// </summary>
	[Parameter]
	public bool ShowThirdLine { get; set; } = false;
}
