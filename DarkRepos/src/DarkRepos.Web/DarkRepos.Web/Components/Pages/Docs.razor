</div>

@code {
	[Parameter]
	public string? Path { get; set; }

	[SupplyParameterFromQuery(Name = "q")]
	public string? SearchQuery { get; set; }

	private DocumentationPage? Page { get; set; }
	private DocumentationToc? TableOfContents { get; set; }
	private IReadOnlyList<DocumentationPage>? CategoryPages { get; set; }
	private IReadOnlyList<DocumentationPage>? SearchResults { get; set; }
	private bool IsLoading { get; set; } = true;
	private bool IsCategory { get; set; } = false;
	private string SearchInput { get; set; } = string.Empty;

	protected override async Task OnParametersSetAsync() {
		IsLoading = true;
		Page = null;
		CategoryPages = null;
		SearchResults = null;
		IsCategory = false;

		// Initialize search input from query
		SearchInput = SearchQuery ?? string.Empty;

		if (!string.IsNullOrWhiteSpace(SearchQuery)) {
			// Search mode
			SearchResults = await DocService.SearchAsync(SearchQuery);
		} else if (string.IsNullOrEmpty(Path)) {
			TableOfContents = await DocService.GetTableOfContentsAsync();
		} else {
			// First try to get as a page
			Page = await DocService.GetPageAsync(Path);

			// If no page found and path is a single segment, try as category
			if (Page == null && !Path.Contains('/')) {
				CategoryPages = await DocService.GetCategoryPagesAsync(Path);
				IsCategory = CategoryPages.Count > 0;
			}
		}

		IsLoading = false;
	}

	private void HandleSearch() {
		if (!string.IsNullOrWhiteSpace(SearchInput)) {
			Navigation.NavigateTo($"/docs?q={Uri.EscapeDataString(SearchInput)}");
		}
	}

	private string GetCurrentPageTitle() {
		if (string.IsNullOrEmpty(Path)) return "Documentation";

		// Convert path to title (e.g., "getting-started" -> "Getting Started")
		var lastSegment = Path.Split('/').Last();
		return string.Join(" ", lastSegment.Split('-').Select(s =>
			char.ToUpper(s[0]) + s.Substring(1)));
	}

	private string GetCategoryTitle(string category) {
		return category switch {
			"guides" => "Guides & Tutorials",
			"formats" => "Format Specifications",
			"tools" => "Tool Documentation",
			"platforms" => "Platform References",
			"api" => "API Reference",
			"getting-started" => "Getting Started",
			"contributing" => "Contributing",
			_ => string.Join(" ", category.Split('-').Select(s =>
				char.ToUpper(s[0]) + s.Substring(1)))
		};
	}

	private string GetCategoryDescription(string category) {
		return category switch {
			"guides" => "Step-by-step guides for common ROM hacking tasks.",
			"formats" => "Technical documentation for ROM formats and data structures.",
			"tools" => "Detailed documentation for ROM hacking tools.",
			"platforms" => "Technical references for NES, SNES, and other platforms.",
			"api" => "API documentation for developers.",
			"getting-started" => "New to ROM hacking? Start here with beginner-friendly guides.",
			"contributing" => "Learn how to contribute to Dark Repos documentation.",
			_ => $"Documentation for {category}."
		};
	}

	private string GetCategoryIcon(string category) {
		return category switch {
			"guides" => "üìñ",
			"formats" => "üìã",
			"tools" => "üîß",
			"platforms" => "üéÆ",
			"api" => "üíª",
			"getting-started" => "üöÄ",
			"contributing" => "ü§ù",
			_ => "üìÑ"
		};
	}
}