@page "/docs"
@page "/docs/{*Path}"
@using DarkRepos.Core.Services
@inject IDocumentationService DocService
@inject NavigationManager Navigation

<PageTitle>@(SearchQuery != null ? $"Search: {SearchQuery}" : Page?.Title ?? "Documentation") - Dark Repos</PageTitle>

<HeadContent>
	<meta name="description"
		content="@(Page?.Description ?? "Guides, tutorials, and reference documentation for ROM hacking and retro game research.")" />
</HeadContent>

<div class="container">
	<nav class="breadcrumbs" aria-label="Breadcrumb">
		<span class="breadcrumb-item"><a href="/">Home</a></span>
		<span class="breadcrumb-separator" aria-hidden="true">/</span>
		@if (string.IsNullOrEmpty(Path) && SearchQuery == null)
		{
			<span class="breadcrumb-item" aria-current="page">Documentation</span>
		}
		else if (SearchQuery != null)
		{
			<span class="breadcrumb-item"><a href="/docs">Documentation</a></span>
			<span class="breadcrumb-separator" aria-hidden="true">/</span>
			<span class="breadcrumb-item" aria-current="page">Search Results</span>
		}
		else
		{
			<span class="breadcrumb-item"><a href="/docs">Documentation</a></span>
			@if (!string.IsNullOrEmpty(Page?.Category))
			{
				<span class="breadcrumb-separator" aria-hidden="true">/</span>
				<span class="breadcrumb-item"><a href="/docs/@Page.Category">@GetCategoryTitle(Page.Category)</a></span>
			}
			<span class="breadcrumb-separator" aria-hidden="true">/</span>
			<span class="breadcrumb-item" aria-current="page">@(Page?.Title ?? GetCurrentPageTitle())</span>
		}
	</nav>

	@if (IsLoading)
	{
		<LoadingSpinner Message="Loading documentation..." />
	}
	else if (SearchQuery != null)
	{
		<header class="page-header">
			<h1 class="page-title">Search Results</h1>
			<p class="page-description">
				@if (SearchResults?.Count > 0)
				{
					<span>Found @SearchResults.Count result(s) for "@SearchQuery"</span>
				}
				else
				{
					<span>No results found for "@SearchQuery"</span>
				}
			</p>
		</header>

		<div class="docs-search-box mb-6">
			<form @onsubmit="HandleSearch" @onsubmit:preventDefault="true">
				<div class="flex gap-2">
					<input type="search" @bind="SearchInput" @bind:event="oninput"
						placeholder="Search documentation..."
						class="form-input flex-1"
						aria-label="Search documentation" />
					<button type="submit" class="btn btn-primary">Search</button>
				</div>
			</form>
		</div>

		@if (SearchResults?.Count > 0)
		{
			<div class="search-results">
				@foreach (var result in SearchResults)
				{
					<a href="/docs/@result.Path" class="card mb-4" style="display: block; text-decoration: none;">
						<h3 class="text-lg mb-2">@result.Title</h3>
						@if (!string.IsNullOrEmpty(result.Category))
						{
							<span class="badge badge-secondary mb-2">@GetCategoryTitle(result.Category)</span>
						}
						<p class="text-secondary text-sm mb-0">
							@(result.Description.Length > 200 ? result.Description[..197] + "..." : result.Description)
						</p>
					</a>
				}
			</div>
		}
		else
		{
			<EmptyState
				Icon="üîç"
				Title="No results found"
				Message="Try different keywords or browse the documentation categories." />
		}

		<div class="mt-6">
			<a href="/docs" class="btn btn-secondary">‚Üê Back to Documentation</a>
		</div>
	}
	else if (string.IsNullOrEmpty(Path))
	{
		<header class="page-header">
			<h1 class="page-title">Documentation</h1>
			<p class="page-description">
