			@if (Page.Headings.Any(h => h.Level <= 3))
			{
				<aside class="docs-sidebar">
					<nav class="docs-toc" aria-label="Table of Contents">
						<h3 class="docs-toc-title">On this page</h3>
						<ul class="docs-toc-list">
							@foreach (var heading in Page.Headings.Where(h => h.Level <= 3))
							{
								<li class="docs-toc-item toc-level-@heading.Level">
									<a href="#@heading.Id">@heading.Text</a>
								</li>
							}
						</ul>
					</nav>
				</aside>
			}

			<article class="docs-content">
				<header class="page-header">
					<h1 class="page-title">@Page.Title</h1>
					@if (Page.LastModified.HasValue)
					{
						<p class="text-muted text-sm">
							Last updated: @Page.LastModified.Value.ToString("MMMM d, yyyy")
						</p>
					}
				</header>

				<div class="prose">
					@((MarkupString)Page.Html)
				</div>
			</article>
		</div>
	}
	else if (IsCategory && CategoryPages != null)
	{
		<header class="page-header">
			<div class="text-4xl mb-4">@GetCategoryIcon(Path!)</div>
			<h1 class="page-title">@GetCategoryTitle(Path!)</h1>
			<p class="page-description">
				@GetCategoryDescription(Path!)
			</p>
		</header>

		@if (CategoryPages.Any())
		{
			<div class="grid grid-cols-1 md:grid-cols-2 gap-4">
				@foreach (var docPage in CategoryPages)
				{
					<a href="/docs/@docPage.Path" class="card" style="text-decoration: none;">
						<h3 class="text-lg mb-2">@docPage.Title</h3>
						<p class="text-secondary text-sm mb-0">
							@(docPage.Description.Length > 150 ? docPage.Description[..147] + "..." : docPage.Description)
						</p>
						@if (docPage.LastModified.HasValue)
						{
							<p class="text-muted text-xs mt-2 mb-0">
								Updated @docPage.LastModified.Value.ToString("MMM d, yyyy")
							</p>
						}
