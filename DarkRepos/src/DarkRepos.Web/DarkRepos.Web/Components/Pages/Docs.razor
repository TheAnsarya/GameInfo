@code {
	[Parameter]
	public string? Path { get; set; }

	private string GetCurrentPageTitle()
	{
		if (string.IsNullOrEmpty(Path)) return "Documentation";

		// Convert path to title (e.g., "getting-started" -> "Getting Started")
		var lastSegment = Path.Split('/').Last();
		return string.Join(" ", lastSegment.Split('-').Select(s =>
			char.ToUpper(s[0]) + s.Substring(1)));
	}
