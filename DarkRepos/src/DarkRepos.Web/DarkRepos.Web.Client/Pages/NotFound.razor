@page "/not-found"
@layout MainLayout

<PageTitle>404 - Page Not Found - Dark Repos</PageTitle>

<div class="container">
	<div class="error-page">
		<div class="error-icon" aria-hidden="true">404</div>
		<h1 class="error-title">Page Not Found</h1>
		<p class="error-message">
			Sorry, the page you're looking for doesn't exist or has been moved.
		</p>
		<div class="error-actions">
			<a href="/" class="btn btn-primary">Go to Home</a>
			<a href="/games" class="btn btn-secondary">Browse Games</a>
		</div>
		<div class="error-suggestions mt-6">
			<h2 class="text-md mb-3">You might be looking for:</h2>
			<ul class="error-links">
				<li><a href="/games">Games Documentation</a></li>
				<li><a href="/tools">ROM Hacking Tools</a></li>
				<li><a href="/docs">Documentation & Guides</a></li>
				<li><a href="/search">Search Everything</a></li>
			</ul>
		</div>
	</div>
</div>